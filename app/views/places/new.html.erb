
<h2>New Place</h2>

<% if @current_user %>
  <%= form_with :model => @place do |form| %>
  <div class="mb-3">
    <%= form.label "name" %>
    <%= form.text_field "name" %>
  </div>
  <p>
    <%= form.submit "Create a Place", :class => "btn btn-info" %>
  </p>
<% end %>
<% else %>
  You must first <a href="/login">login</a> to create a new place.
<% end %>